{
  "scripts": {
    "test": "jest --coverage --silent && jest-coverage-badges --input coverage/coverage-summary.json --output ./badges_output"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "transform": {
      "\\.[jt]sx?$": "babel-jest"
    }
  },
  "dependencies": {
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-environment-jsdom": "^30.2.0",
    "js-coverage-badges": "^1.1.1",
    "nyc": "^17.1.0"
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "reporter": [
      "json-summary",
      "lcov",
      "text"
    ],
    "include": [
      "src"
    ],
    "exclude": "**/*.mock.js"
  }
}
